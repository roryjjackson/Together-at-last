<div class="page">
  <div class="data">
    <img src="https://images.pexels.com/photos/4060469/pexels-photo-4060469.jpeg?cs=srgb&dl=pexels-agostino-toselli-4060469.jpg&fm=jpg" alt="" class="image5">
    <%# <img src="https://images.pexels.com/photos/1024993/pexels-photo-1024993.jpeg" class="image3"> %>
    <img src="https://images.pexels.com/photos/2253870/pexels-photo-2253870.jpeg?cs=srgb&dl=pexels-emma-bauso-2253870.jpg&fm=jpg" class="image2">
    <h1><%= @wedding.page_heading %></h1>
    <h2><%= @wedding.date %></h2>
    <p><%= @wedding.info %></p>
  </div>
  <% if @wedding.photos.present?  %>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
      <% i = 0 %>
        <% @wedding.photos.each do |photo| %>
        <% if i == 0 %>
            <div class="carousel-item active">
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: "d-block w-100" %>
            </div>
            <% i += 1 %>
          <% else %>
            <div class="carousel-item">
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: "d-block w-100" %>
            </div>
          <% end %>
        <% end %>
      </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% end %>

  <%= render 'edit', wedding: @wedding %>

</div>
