<div class="entire">
  <h1 class="header">RSVP</h1>
  <body>
    <div class="rsvp-form">
      <div class ="info">
      <h1 class="subheader">RSVP</h1>
      <h2 class="subheader">for the wedding of</h2>
      <h1 class="rsvp-title">Allison & Daniel</h1>
        <p class="line">________________________________________</p>
        <h2 class ="subheader">The Details</h2>
        <p>Saturday, June 18, 2016</p>
        <p>5:00 PM</p>
        <br>
        <h2 class ="subheader">Ceremony & Reception</h2>
        <p>Chapel of Our Saviour</p>
        <p>8 4th St, Colorado Springs, CO 80906</p>
            <p class= "line">________________________________________</p>


        <div class="container pt-5">
          <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">

            <h2 class="reply-text mb-5">Kindly Reply /</h2>
            <%= simple_form_for([@wedding,@rsvp]) do |f| %>
            <div class="col-12 mb-3">
              <%= f.input :meal_choice, collection: ["Chicken", "Beef", "Vegetarian"] %>
              <%= f.input :spotify_song %>
              <%= f.input :attendance, :collection => %w[Yes No] %>
              <%= f.input :attendee %>
              <%= f.submit "Complete the form", class: "btn btn-flat" %>
            <% end %>
            </div>

    </div>
  </body>
</div>


