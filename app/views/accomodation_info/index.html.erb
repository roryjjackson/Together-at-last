<h1 class="accomodation-title">find somewhere to stay</h1>
<h1 id="accom-msg">Our suggestions</h1>
<div class="main-container">
  <div class="accom_cards">
    <% @accomodation_info.each do |accomodation_info| %>
      <div class="row mt-5 ml-5" style="width: 28rem; height: 14rem;">
        <div class="card-body">
          <div id="card-title">
            <h1 class="card-title"><%= accomodation_info.title %></h1>
            <p class="card-text"><%= accomodation_info.description %></p>
            <p class="card-address">📍 <%= accomodation_info.address %></p>
            <a href="https://uk.hotels.com/ho1703104/ritz-paris-paris-france/?locale=en_GB&pos=HCOM_UK&siteid=300000005"  target="_blank" class="btn btn-flat">Book a room</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="map"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
