<h1 class="text-center mt-5 mb-5">Schedule</h1>
<div class="schedule-page">
  <%# <div class="sixteen columns section-title">
    <hr/>
  </div> %>
  <div class="picture">
              <img class="circle" style="width: 700px;" src="https://bridebox.com/wp-content/uploads/2015/04/marital-problems.jpg" />
            </div>

  <%# <div class="fifteen columns outer-content" >
    <div class="content" id="schedule-slider" style="height:275px">
      <ul class="slides" style="height:275px">

       <div id="sched-slide-0" style="height:275px">
