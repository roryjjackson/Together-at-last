            </div>
            </div> %>
<div class="text">
<%= link_to "Add a new event", new_wedding_schedule_path([:wedding_id]) %>
<% i = 1 %>
<% @schedules.each do |schedule| %>
    <% if i.odd?  %>
        <div class="text-right">
            <h3><%= schedule.time.strftime("%I:%M%p") %></h3>
            <p><%= schedule.description %></p>
        </div>
    <% else %>
        <div class="text-left">
            <h3><%= schedule.time.strftime("%I:%M%p") %></h3>
            <p><%= schedule.description %></p>
        </div>
    <% end %>
    <% i += 1 %>
<% end %>
</div>